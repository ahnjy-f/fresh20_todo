<%-include('./header') %>

<h1 class="mt-3 mb-3"><%= __n('User.User Home') %></h1>

<script>
    function del(id){
        var result = window.confirm('id=' + id + 'のTODOを削除しますか');
        if(result){
            window.location = '/del_todo?id=' + id;
        }
    }
</script>
<p class="h5 mt-4"><%= __n('User.Todo List') %></p>
<table class="table mt-4">
    <tr>
        <th><%= __n('User.ID') %></th>
        <th><%= __n('User.Title') %></th>
        <th><%= __n('User.Finished') %></th>
        <th><%= __n('User.Completed?') %></th>
        <th><%= __n('User.Delete') %></th>
    </tr>
    <% for(let i in data){ %>
        <tr>
            <td><%= data[i].id %></td>
            <td><%= data[i].title %></td>
            <td><%= data[i]['datetime("finished","+9 hours")'] %></td>
            <td><%= data[i].checked ? 'YES':' ' %></td>
            <td><a href= "javascript:del(<%= data[i].id %>);"><%= __n('User.Delete') %></a></td>
        </tr>
    <% } %>
</table>

<%-include('./footer') %>