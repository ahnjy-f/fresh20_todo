<%-include('./header') %>

<h1 class="mt-3 mb-3"><%= __n('Add.Add ToDo') %></h1>

<form method="post" action="/add">
    <div class="form-group">
        <label for="name"><%= __n('Add.Title') %></label>
        <input type="text" id="title" name="title"
        class="form-control">
    </div>
    <div class="form-group">
        <label for="memo"><%= __n('Add.Memo') %></label>
        <textarea id="memo" name="memo"
        class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="finished"><%= __n('Add.Finished') %></label>
        <input type="datetime-local" id="finished" name="finished"
        class="form-control">
    </div>
    <div>
        <input type="submit" class="btn btn-primary">
    </div>

</form>
<%-include('./footer')%>
